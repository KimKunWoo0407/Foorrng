<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Foorrng_owner" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/foorrng_orange</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Foorrng_owner" parent="Base.Theme.Foorrng_owner" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 텍스트 스타일 -->
    <!-- Base -->
    <style name="Foorrng_owner.TEXT.M.16" parent="Theme.Foorrng_owner">
        <item name="android:fontFamily">@font/font_suite_semibold</item>
    </style>

    <style name="Foorrng_owner.TEXT.SB.16" parent="Theme.Foorrng_owner">
        <item name="android:fontFamily">@font/font_suite_semibold</item>
    </style>

    <style name="Foorrng_owner.TEXT.B.16" parent="Theme.Foorrng_owner">
        <item name="android:fontFamily">@font/font_suite_semibold</item>
    </style>

    <style name="Foorrng_owner.TEXT.EB.16" parent="Theme.Foorrng_owner">
        <item name="android:fontFamily">@font/font_suite_semibold</item>
    </style>

    <style name="Foorrng_owner.TEXT.H.16" parent="Theme.Foorrng_owner">
        <item name="android:fontFamily">@font/font_suite_semibold</item>
    </style>

        <!-- Detail -->
    <style name="Foorrng_owner.TEXT.SB.14" parent="Foorrng_owner.TEXT.SB.16">
        <item name="android:textSize">14sp</item>
    </style>



    <!-- View Style -->
    <style name="Foorrng_owner.TextInputLayout" parent="Theme.Foorrng_owner">
        <item name="android:textAppearance">@style/Foorrng_owner.TEXT.SB.16</item>
        <item name="hintTextAppearance">@style/Foorrng_owner.TEXT.SB.16</item>
        <item name="boxStrokeColor">@color/foorrng_orange</item>
    </style>

</resources>